<%- include("partials/header"); -%>

<div class="container" id="container">
  <h1>Welcome to <%= nameOfRestaurant %></h1>

  <p>Please select the table you want</p>


  <script type="text/javascript">
    var pageButtons = $('#container');
    for (var i = 0; i < <%= arraySizeTableS.length %>; i++) {
      pageButtons.append('<input type="button" id="button" value="' + "S" + '"/>');
    }

    for (var i = 0; i < <%= arraySizeTableM.length %>; i++) {
      pageButtons.append('<input type="button" id="button" value="' + "M" + '"/>');
    }

    for (var i = 0; i < <%= arraySizeTableL.length %>; i++) {
      pageButtons.append('<input type="button" id="button" value="' + "L" + '"/>');
    }
  </script>

  <h1><%= totalTable %></h1>

</div>

<%- include("partials/footer"); -%>
